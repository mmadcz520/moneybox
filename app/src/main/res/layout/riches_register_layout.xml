<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ct_background">

    <com.changtou.moneybox.module.widget.ExEditView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android_custom:hintText="请输入手机号码"
        android_custom:imgSrc="@mipmap/home_icon_income1">

    </com.changtou.moneybox.module.widget.ExEditView>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:background="@color/ct_blue"
        android:textColor="@color/ct_white"
        android:text="注 册"
        android:textSize="@dimen/font_size_normal"
        android:layout_height="50dp" />

</LinearLayout>