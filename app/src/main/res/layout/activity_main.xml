<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.changtou.moneybox.module.widget.ExViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ct_pager_bg" />

    <LinearLayout
        android:background="@color/ct_white"
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/lay_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_main"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_action_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_games"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_product"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_games_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_riches"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_group_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_news_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>