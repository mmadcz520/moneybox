<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<ImageView android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:src="@mipmap/riches_recharge_card"/>-->

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_height_normal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke_edit_fillpraent">
        <EditText
            android:id="@+id/riches_recharge_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/font_invalid"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_normal"
            android:background="@color/ct_white"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:hint="请输入充值金额"/>
    </LinearLayout>

    <Button
        android:id="@+id/quick_recharge_btn"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_height="@dimen/button_height_fillparent"
        android:textColor="@color/ct_white"
        android:textSize="@dimen/font_size_navigation"
        android:background="@drawable/btn_selector"
        android:typeface="monospace"
        android:text="充 值"/>

</LinearLayout>