<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepage_progress"
    android:layout_width="fill_parent"
    android:minHeight="210dp"
    android:layout_height="wrap_content"
    android:background="@color/ct_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_progress_height">

        <com.changtou.moneybox.module.widget.RoundProgressBar
            android:id="@+id/homepage_invest_progress"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android_custom:roundColor="#ffffff"
            android_custom:roundProgressColor="@color/ct_blue_hint"
            android_custom:roundWidth="11dp"
            android_custom:style="FILL"
            android_custom:textColor="@color/ct_blue"
            android_custom:textSize="18sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/homepage_invest_lijinlayout"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_height="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:src="@mipmap/an_lj_bg" />

                    <TextView
                        android:id="@+id/homepage_invest_lijininterest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical|left"
                        android:text="5%礼金变现"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/font_prompt"
                        android:textSize="7sp" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/homepage_income_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:text=""
                        android:textColor="@color/font_prompt"
                        android:textSize="@dimen/font_size_percent" />
                    <TextView
                        android:id="@+id/homepage_income_percenttag"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/homepage_income_percent"
                        android:gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:text=""
                        android:textColor="@color/font_prompt"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginTop="2dp"
                    android:text="预期年化收益"
                    android:textColor="@color/ct_blue"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="168dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_timelimit"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text=""
                    android:textColor="@color/font_prompt"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/xiangmuqixiang"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:text="项目期限"
                    android:textColor="@color/ct_blue"
                    android:textSize="10dp" />
            </LinearLayout>
        </com.changtou.moneybox.module.widget.RoundProgressBar>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:baselineAligned="true">
            <com.changtou.moneybox.module.widget.CountView
                android:id="@+id/invest_progress_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom|center"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_number" />

            <TextView
                android:id="@+id/invest_progress_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="top|center"
                android:text="-/-"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/homepage_invest_progress">

        <TextView
            android:id="@+id/invest_progress_qtje"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:background="@drawable/fillet_stroke"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="100元起投 | 每人限购100万元"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_hint"/>
    </RelativeLayout>
</LinearLayout>