<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:id="@+id/error_frame"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="用户名："
                android:textColor="@color/font_black"/>

            <TextView
                android:id="@+id/verify_usernane"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/font_black"/>

        </LinearLayout>

        <com.changtou.moneybox.module.widget.ExEditView
            android:id="@+id/verify_login_password"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/exedit_height"
            android:layout_marginTop="10dp"
            android_custom:hintText="请输入登录密码"
            android_custom:imgSrc="@mipmap/riches_register_pass"
            android_custom:editType="1"
            android_custom:position="middle">

        </com.changtou.moneybox.module.widget.ExEditView>

    </LinearLayout>

    <TextView
        android:id="@+id/content_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#797979"
        android:paddingTop="5dp"
        android:paddingBottom="25dp"
        android:visibility="gone" />

    <View
        android:id="@+id/riches_line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/ct_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/pd_cancel_button"
            android:layout_height="38dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_normal"
            android:gravity="center"
            android:text="取消" />

        <View
            android:id="@+id/riches_line2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/ct_divide_line" />

        <Button
            android:id="@+id/pd_confirm_button"
            android:layout_height="38dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/font_black"
            android:gravity="center"
            android:textSize="@dimen/font_size_normal"
            android:text="确定"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>