<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ct_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/edit_width_normal"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="@drawable/stroke_list_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/ct_white"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/home_icon_income1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/stroke_edit_null"
                android:hint="请输入手机号码/邮箱"
                android:textColorHint="@color/font_invalid"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <View
            android:id="@+id/riches_line2"
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:background="@color/ct_divide_line" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ct_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/home_icon_income1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/stroke_edit_null"
                android:hint="请输入登陆密码"
                android:textColorHint="@color/font_invalid"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/edit_width_normal"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_list_item">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/stroke_edit_null"
            android:hint="请输入验证码"
            android:textColorHint="@color/font_invalid"
            android:textSize="@dimen/font_size_normal" />

        <ImageView
            android:id="@+id/vc_image"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="@dimen/edit_width_normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_height="60dp"
        android:background="@color/ct_blue"
        android:text="登陆"/>

    <RelativeLayout
        android:layout_width="@dimen/edit_width_normal"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:textColor="@color/ct_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="忘记密码"/>

        <View
            android:id="@+id/riches_line3"
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_toLeftOf="@+id/forgot_password"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/ct_divide_line" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_toLeftOf="@+id/riches_line3"
            android:layout_marginRight="5dp"
            android:textColor="@color/ct_blue"
            android:text="注册"/>

    </RelativeLayout>


</LinearLayout>