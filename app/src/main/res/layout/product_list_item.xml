<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:minHeight="80dp">

    <LinearLayout
        android:id="@+id/lld"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke_list_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pro_list_titile"
                android:layout_width="200dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical|left"
                android:text=""
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/pro_list_lijinlayout"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/an_lj_bg" />

                <TextView
                    android:id="@+id/pro_list_lijininterest"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="5%礼金变现"
                    android:textColor="@color/font_prompt"
                    android:textSize="7sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pro_list_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:textColor="@color/font_prompt"
                        android:textSize="@dimen/font_size_percent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="%"
                        android:textColor="@color/font_prompt"
                        android:textSize="@dimen/font_size_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:text="年化收益"
                    android:textColor="@color/font_invalid"
                    android:textSize="@dimen/font_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pro_list_maturity"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="投资期限"
                    android:textColor="@color/font_invalid"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pro_list_minamount"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="起投金额"
                    android:textColor="@color/font_invalid"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pro_list_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="可投金额"
                    android:textColor="@color/font_invalid"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lld">

                <com.changtou.moneybox.module.widget.RoundProgressBar
                    android:id="@+id/pro_list_schedule"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android_custom:roundColor="@color/ct_invalid"
                    android_custom:roundProgressColor="@color/ct_blue"
                    android_custom:roundWidth="3dp"
                    android_custom:style="STROKE"
                    android_custom:textColor="@color/ct_blue"
                    android_custom:textSize="18sp" />

                <TextView
                    android:id="@+id/pro_list_schedule_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="50%"
                    android:textColor="@color/ct_blue"
                    android:textSize="@dimen/font_size_navigation" />

                <!--<TextView-->
                <!--android:id="@+id/pro_list_schedule_syje"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:textSize="@dimen/font_size_hint"-->
                <!--android:textColor="@color/ct_blue"-->
                <!--android:text="50%"/>-->

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


