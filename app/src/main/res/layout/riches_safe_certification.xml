<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ct_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/extext_height"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/stroke_edit_fillpraent">
        <TextView android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/font_black"
            android:text="姓 名"/>
        <EditText
            android:id="@+id/certify_fullname"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_edit_null"
            android:textColorHint="@color/font_invalid"
            android:textSize="@dimen/font_size_normal"
            android:hint="请输入您的姓名" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/extext_height"
        android:background="@drawable/stroke_edit_fillpraent">
        <TextView android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/font_black"
            android:text="身份证"/>
        <EditText
            android:id="@+id/certify_idcard"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_edit_null"
            android:textColorHint="@color/font_invalid"
            android:textSize="@dimen/font_size_normal"
            android:inputType="number"
            android:hint="请输入您的身份证号码" />
    </LinearLayout>

    <Button
        android:id="@+id/certify_btn"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:layout_height="@dimen/button_height_fillparent"
        android:textColor="@color/ct_white"
        android:background="@color/ct_blue"
        android:typeface="monospace"
        android:textSize="@dimen/font_size_navigation"
        android:text="确 认"/>

</LinearLayout>