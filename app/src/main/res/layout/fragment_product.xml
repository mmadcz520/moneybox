<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <com.changtou.moneybox.module.widget.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        segmentcontrol:texts="长投宝|ZAMA宝|精选债权|转让专区"
        segmentcontrol:colors="@color/ct_blue"
        segmentcontrol:cornerRadius="3dp"
        segmentcontrol:direction="horizon"
        segmentcontrol:verticalGap="12dp"
        segmentcontrol:horizonGap="13dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
