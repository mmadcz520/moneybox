<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <com.changtou.moneybox.module.widget.SegmentControl
            xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            segmentcontrol:texts="还款中|已结束|转让中|已转让"
            segmentcontrol:colors="@color/ct_blue"
            segmentcontrol:cornerRadius="3dp"
            segmentcontrol:direction="horizon"
            segmentcontrol:verticalGap="12dp"
            segmentcontrol:horizonGap="20dp"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/riches_invest_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>