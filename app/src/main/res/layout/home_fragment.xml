<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_refresh_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ct_background"
    android:fillViewport="true"
    ptr:ptrAnimationStyle="flip"
    ptr:ptrMode="pullDownFromTop">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <com.changtou.moneybox.module.widget.ExImageSwitcher
            android:id="@+id/homepage_banner"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_gravity="top" />

        <LinearLayout
            android:id="@+id/homepage_ll_count"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/homepage_banner"
            android:layout_weight="65"
            android:background="@color/ct_white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/homepage_ll_invest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_normal" />

                    <com.changtou.moneybox.module.widget.CountView
                        android:id="@+id/homepage_investsum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="0"
                        android:textColor="@color/ct_blue"
                        android:textSize="@dimen/font_size_number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:src="@mipmap/home_icon_income1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:text="@string/invest_total"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_normal" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/ct_divide_line"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/homepage_ll_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_normal" />

                    <com.changtou.moneybox.module.widget.CountView
                        android:id="@+id/homepage_makemoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:paddingLeft="4dp"
                        android:text="0"
                        android:textColor="@color/ct_red"
                        android:textSize="@dimen/font_size_number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:src="@mipmap/home_icon_income2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:text="@string/income_total"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_size_normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/homepage_line2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/homepage_ll_income"
            android:background="@color/ct_divide_line" />

        <RelativeLayout
            android:id="@+id/homepage_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/homepage_line2"
            android:layout_weight="38"
            android:background="#f9f9f9">

            <TextView
                android:id="@+id/homepage_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/font_black" />

            <ImageView
                android:id="@+id/homepage_title_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/homepage_title_text"
                android:src="@mipmap/home_icon_title"/>
        </RelativeLayout>

        <View
            android:id="@+id/homepage_line3"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/homepage_product_title"
            android:background="@color/ct_divide_line" />

        <include layout="@layout/invest_progress_layout"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="90">

            <Button
                android:id="@+id/homepage_btn_invest"
                android:layout_width="304dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:background="@color/ct_blue"
                android:text="立即投资"
                android:textColor="@color/font_white"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/home_icon_safe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:text="按月付息,到期还本,本息保障,灵活转让"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_hint"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
