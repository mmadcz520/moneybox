<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_showMessages"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ct_background_promotion"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/ct_divide_line" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/riches_promotion_banner" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="top|center_horizontal"
                    android:text="①.邀请您的好友"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_hint2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/riches_promotion_step1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="②.好友接受邀请并注册"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_hint2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/riches_promotion_step2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="top|center_horizontal"
                    android:text="③.完善资料"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_size_hint2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/riches_promotion_step3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="top|center_horizontal"
                android:text="④.双方各获得20元礼金奖励"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_size_hint2" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/riches_promotion_step4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="27dp"
                android:background="@drawable/fillet_pro_top"
                android:gravity="center"
                android:text="邀请你的好友加入吧"
                android:textColor="@color/ct_white"
                android:textSize="@dimen/font_size_hint2">

            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/fillet_pro_bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/riches_pro_phonenum"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_phone" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_weixin" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_friend" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_weibo" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_qq" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@mipmap/riches_promotion_more" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/ct_divide_line" />

                <TextView
                    android:id="@+id/riches_rewards"
                    android:layout_width="fill_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_hint2"
                    android:textColor="@color/font_black"
                    android:text="查看推荐记录 >>"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/promotion_page_prompt"
            android:padding="20dp"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/font_size_hint2"
            android:textColor="@color/font_black"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>