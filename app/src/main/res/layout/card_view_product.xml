<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_gravity="center"
                                            android:orientation="horizontal"
                                            android:background="@color/ct_white"
                                            card_view:cardPreventCornerOverlap="true"
                                            card_view:cardElevation="1dp"
                                            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lld"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pro_list_titile"
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="18dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/ct_font_black"
                        android:text="[长投宝] 上手易第256期"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="66dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:textColor="@color/ct_font_red"
                                    android:textSize="24dp"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:text="15"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:textColor="@color/ct_font_red"
                                    android:textSize="@dimen/product_list_textsize_normal"
                                    android:text="%"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textColor="@color/ct_font_hint"
                                android:gravity="center_horizontal"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:text="年化收益"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:layout_gravity="center_horizontal"
                                android:gravity="bottom"
                                android:textColor="@color/ct_font_black"
                                android:text="3个月"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:textColor="@color/ct_font_hint"
                                android:text="投资期限"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:layout_gravity="center_horizontal"
                                android:gravity="bottom"
                                android:textColor="@color/ct_font_black"
                                android:text="100元"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:textColor="@color/ct_font_hint"
                                android:text="起投金额"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:gravity="bottom"
                                android:textColor="@color/ct_font_black"
                                android:text="100万"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/product_list_textsize_normal"
                                android:textColor="@color/ct_font_hint"
                                android:text="融资金额"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="3">

                    <com.changtou.moneybox.module.widget.RoundProgressBar
                        android:id="@+id/roundProgressBar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android_custom:style="STROKE"
                        android_custom:roundColor="@color/ct_item_gray"
                        android_custom:roundProgressColor="@color/ct_font_red"
                        android_custom:textColor="@color/ct_blue"
                        android_custom:roundWidth="3dp"
                        android_custom:textSize="18sp"/>
                    <!--<Button-->
                        <!--android:layout_width="64dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:text="投资"-->
                        <!--android:background="@color/ct_blue"-->
                        <!--android:layout_gravity="center_horizontal"/>-->

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </FrameLayout>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/product_tag"/>

</FrameLayout>