<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ct_background">

    <TextView
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_hint2"
        android:textColor="@color/font_black"
        android:text="已向您的手机发送短信验证码"/>

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.changtou.moneybox.module.widget.ExEditView
            android:id="@+id/register_code"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/exedit_height"
            android_custom:editType="3"
            android_custom:hintText="请输入验证码"
            android_custom:imgSrc="@mipmap/riches_register_checknum">
        </com.changtou.moneybox.module.widget.ExEditView>

        <Button
            android:id="@+id/register_count_btn"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_selector"
            android:textSize="@dimen/font_size_hint"
            android:textColor="@color/ct_white"
            android:enabled="false"
            android:text="60秒后重新发送"/>

    </RelativeLayout>

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="fill_parent"
        android:layout_marginTop="59dp"
        android:background="@color/ct_blue"
        android:textColor="@color/ct_white"
        android:text="下一步"
        android:textSize="@dimen/font_size_navigation"
        android:layout_height="@dimen/button_height_fillparent" />

</LinearLayout>