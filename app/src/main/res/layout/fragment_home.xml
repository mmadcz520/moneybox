<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.changtou.moneybox.module.widget.ExImageSwitcher
        android:id = "@+id/hp_ad"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:src="@mipmap/home_default_banner"
        android:layout_gravity="top"/>

    <LinearLayout
        android:id="@+id/homepage_ll_income"
        android:layout_below="@+id/hp_ad"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="19dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:text="￥"/>
                <com.changtou.moneybox.module.widget.CountView
                         android:id="@+id/homepage_countview1"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/ct_blue"
                          android:textSize="20dp"
                          android:paddingLeft="4dp"
                          android:layout_gravity="center_vertical"
                          android:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView android:layout_height="17dp"
                           android:layout_width="17dp"
                           android:src="@mipmap/home_icon_income1"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:paddingLeft="4dp"
                          android:textColor="@color/ct_font_black"
                          android:text="累计投资金额(元)"/>
            </LinearLayout>

        </RelativeLayout>

        <View android:layout_width="1dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:background="@color/ct_line_gray"/>

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="19dp"
                android:orientation="horizontal">
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/ct_font_black"
                          android:text="￥"/>
                <com.changtou.moneybox.module.widget.CountView
                          android:id="@+id/homepage_countview2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="20dp"
                          android:paddingLeft="4dp"
                          android:textColor="@color/ct_blue"
                          android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <ImageView android:layout_height="17dp"
                           android:layout_width="17dp"
                           android:src="@mipmap/home_icon_income2"/>
                <TextView android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:paddingLeft="4dp"
                          android:textColor="@color/ct_font_black"
                          android:text="累计为客户赚取（元）"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View android:layout_width="fill_parent"
          android:id="@+id/homepage_line2"
          android:layout_below="@+id/homepage_ll_income"
          android:layout_height="1dp"
          android:background="@color/ct_line_gray"/>

    <RelativeLayout
        android:id="@+id/homepage_title"
        android:layout_below="@+id/homepage_line2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#f9f9f9">

        <ImageView
            android:id="@+id/homepage_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/homepage_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ct_font_black"
            android:layout_centerInParent="true"
            android:text="今日优选[上投宝] 上首易第256期"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/homepage_progress"
        android:layout_width="fill_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/homepage_title">


        <com.changtou.moneybox.module.widget.RoundProgressBar
            android:id="@+id/roundProgressBar2"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android_custom:roundColor="#ffffff"
            android_custom:roundProgressColor="@color/ct_progress_blue"
            android_custom:textColor="@color/ct_blue"
            android_custom:roundWidth="11dp"
            android_custom:textSize="18sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30dp"
                    android:textColor="@color/ct_font_red"
                    android:text="11%"/>
                <TextView
                    android:id="@+id/miaoshu"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/ct_blue"
                    android:text="预期年化收益"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="168dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/yueshu"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:textSize="14dp"
                    android:textColor="@color/ct_font_red"
                    android:text="三个月"/>
                <TextView
                    android:id="@+id/xiangmuqixiang"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textSize="12dp"
                    android:textColor="@color/ct_blue"
                    android:text="项目期限"/>
            </LinearLayout>

        </com.changtou.moneybox.module.widget.RoundProgressBar>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#f9f9f9"
        android:layout_height="85dp"
        android:layout_below="@+id/homepage_progress">

        <Button
            android:id="@+id/homepage_btn_invest"
            android:layout_marginTop="31dp"
            android:layout_width="304dp"
            android:layout_height="40dp"
            android:textSize="19dp"
            android:textColor="@color/ct_white"
            android:background="@color/ct_blue"
            android:text="立即投资"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:src="@mipmap/home_icon_safe"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:textSize="11dp"
                android:textColor="@color/ct_font_black"
                android:text="按月付息,到期还本,本息保障,灵活转让"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
