<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/ct_background"
                android:orientation="vertical">
    <LinearLayout
        android:layout_below="@+id/split_line"
        android:id="@+id/describe_layout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/confirm_product_details"
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:divider="@color/ct_divide_line"
            android:dividerHeight="1px"
            android:headerDividersEnabled="true" />

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_height_normal"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:background="@drawable/stroke_edit_fillpraent">
        <EditText
            android:id="@+id/confirm_input_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/font_invalid"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_normal"
            android:inputType="number"
            android:background="@color/ct_white"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:hint="请输入100元的整数倍，不超过100万元"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/balance_layout"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_invalid"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/font_size_hint2"
        android:text="你当前可以余额："/>

        <TextView
            android:id="@+id/confirm_text_overage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_invalid"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/font_size_hint2"
            android:text="0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_invalid"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_size_hint2"
            android:text="元"/>

    </LinearLayout>

    <Button
        android:id="@+id/confirm_button_do"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height_fillparent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_selector"
        android:layout_marginTop="20dp"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_size_navigation"
        android:enabled="false"
        android:text="立即投资"/>

</LinearLayout>
