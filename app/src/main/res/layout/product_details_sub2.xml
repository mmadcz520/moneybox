<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/details_scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/ct_background">


        <com.changtou.moneybox.module.widget.CustomViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/product_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.changtou.moneybox.module.widget.CustomViewPager>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ct_white"
        android:elevation="5dp">
        <com.changtou.moneybox.module.widget.SlidingTabLayout
            android:id="@+id/product_details_sliding_tabs"
            android:background="@color/ct_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="2dp"
            android:background="@color/ct_divide_line"/>
    </LinearLayout>
</FrameLayout>
