<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/ct_background"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:minHeight="800dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@color/ct_background">
        <TextView
            android:id="@+id/investor_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="用户"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_size_hint2" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/investor_sum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_hint2"
            android:textColor="@color/font_black"
            android:gravity="center"
            android:text="投资金额"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/investor_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_hint2"
            android:textColor="@color/font_black"
            android:gravity="center"
            android:text="投资时间"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/ct_divide_line" />

    <ListView
        android:id="@+id/investlist_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/ct_divide_line"
        android:dividerHeight="1px"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true">
    </ListView>

</LinearLayout>