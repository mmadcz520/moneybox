<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ct_background">

    <com.changtou.moneybox.module.widget.ExEditView
        android:id="@+id/register_password"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/exedit_height"
        android_custom:hintText="请输入密码"
        android_custom:imgSrc="@mipmap/riches_register_pass">
    </com.changtou.moneybox.module.widget.ExEditView>

    <com.changtou.moneybox.module.widget.ExEditView
        android:id="@+id/register_affirm_password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/exedit_height"
        android_custom:position="bottom"
        android_custom:hintText="请再次输入"
        android_custom:imgSrc="@null">

    </com.changtou.moneybox.module.widget.ExEditView>

    <Button
        android:id="@+id/riches_register_do"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector"
        android:textColor="@color/ct_white"
        android:text="完成"
        android:textSize="@dimen/font_size_navigation"
        android:layout_height="@dimen/button_height_fillparent" />

</LinearLayout>