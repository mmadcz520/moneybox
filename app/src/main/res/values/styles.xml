<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="actionbar_def_style" parent="@style/Widget.AppCompat.ActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/ct_blue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="height">@dimen/app_actionbar_height</item>
    </style>

    <style name="AnimActivity">
    </style>

    <style name="ActivityTheme_Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="actionBarStyle">@style/actionbar_def_style</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style
        name="dialog_loading">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/login_dialog_transparency</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <item type="id" name="contentFL1"/>
    <item type="id" name="contentFL2"/>
    <item type="id" name="contentFL3"/>
    <color name="gray">#606060</color>
    <color name="bg">#dddddd</color>
    <style name="CommonTextAppearance_Small_Gray" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TabIndicator" />


    <!--dialog-->
    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <!--<item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>-->
        <!--<item name="DialogTitleText">Loading…</item>-->
        <!--<item name="DialogSpotCount">5</item>-->
    </style>

</resources>
